<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/application.css?t=<%= Time.now.to_i %>" type="text/css" />

    <title>Example Application</title>
  </head>
  <body>
    <% if flash[:error] %>
      <div class="flash alert alert-danger" role="alert">
        <%= flash[:error] %>
      </div>
    <% end %>
    <% if flash[:success] %>
      <div class="flash alert alert-success" role="alert">
        <%= flash[:success] %>
      </div>
    <% end %>
    <% if flash[:notice] %>
      <div class="flash alert alert-primary" role="alert">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
